<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script
      src="https://kit.fontawesome.com/42a182743f.js"
      crossorigin="anonymous"
    ></script>
    <!-- CSS -->
    <link rel="stylesheet" href="/public/css/profile.css" />
    <link rel="stylesheet" href="/public/css/style.css" />
    <title>Profile</title>
  </head>
  <body>
    <%-include('../partials/navbar.ejs') %>
   <div class="profile-container">
      <header
        style="
          background-image: url(https://cdn.pixabay.com/photo/2022/10/03/19/03/building-7496662_1280.jpg);
        "
      >
        <div class="icons-container">
          <p>
            <i class="fas fa-user"></i>
          </p>
          <p>
            <i class="fas fa-envelope"></i>
          </p>
          <p>
            <i class="fas fa-lock"></i>
          </p>
          <p>
            <i class="fas fa-sign-out-alt"></i>
          </p>
        </div>
        <!-- upload cover image icon -->
        <a href="/api/v1/users/cover-photo-upload">
          <i class="fas fa-camera upload-btn"></i>
        </a>

      </header>

  <!-- profile image -->
      <div class="profile-img">
        <img
          src="https://cdn.pixabay.com/photo/2022/09/26/04/24/swan-7479623_1280.jpg"
          alt="profile image"
        />
        <!-- upload profile image icon -->
        <a href="/api/v1/users/profile-photo-upload">
          <i class="fas fa-camera upload-btn"></i>
        </a>
      </div>
      <!-- personal details -->
      <div class="personal-container">
        <div class="details-wrapper">
          <div class="details">
            <i class="fas fa-user"></i>
            <p>Name: John Doe</p>
          </div>
          <div class="details">
            <i class="fas fa-envelope"></i>
            <p>Email: John Doe</p>
          </div>
          <!-- date joined -->
          <div class="details">
            <i class="fas fa-calendar"></i>
            <p>Date Joined: John Doe</p>
          </div>
        </div>
      </div>
    </div>
    <div class="latest-post-title">
      <!-- Icon -->
      <i class="fas fa-book-open"></i>
      <h1>Latest Posts (20)</h1>
      
    </div>
